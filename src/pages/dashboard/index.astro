---
import Layout from '../../layouts/Layout.astro';
import { requireRole } from '../../utils/auth';
import { getUserFromRequest } from '../../utils/session';
import { db, News, eq } from 'astro:db';

const user = getUserFromRequest(Astro.request);

if (!user) {
  return Astro.redirect('/login');
}

// Solo permitir acceso a usuarios
if (!requireRole(user, ['user'])) {
  return Astro.redirect('/login');
}

// Obtener las noticias del usuario
const userNews = await db.select().from(News).where(eq(News.userId, user.id));
const totalUserNews = userNews.length;

---

<Layout title="Panel de Usuario - Mi App">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-6">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Panel de Usuario</h1>
            <p class="mt-1 text-sm text-gray-600">Gestión de tus noticias</p>
          </div>
          <div class="flex items-center space-x-4">
            <div class="text-right">
              <span class="text-sm text-gray-700">Bienvenido, {user.nombre}</span>
              <div class="text-xs text-gray-500">Rol: Usuario</div>
            </div>
            <form action="dashboard/api/auth/logout" method="POST" class="inline">
              <button type="submit" class="text-sm text-red-600 hover:text-red-500 px-3 py-1 rounded border border-red-200 hover:bg-red-50">
                Cerrar Sesión
              </button>
            </form>
          </div>
        </div>
      </div>
    </header>

    <!-- Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-6 sm:px-0">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">
                      Mis Noticias
                    </dt>
                    <dd class="text-lg font-medium text-gray-900">{totalUserNews}</dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>

 

        </div>

        <!-- Quick Actions -->
        <div class="mt-8">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
            Mis Herramientas
          </h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            
            <!-- Gestión de Mis Noticias -->
            <a
              href="/dashboard/news"
              class="bg-green-600 hover:bg-green-700 text-white p-4 rounded-lg text-center transition-colors shadow-sm hover:shadow-md"
            >
              <svg class="h-8 w-8 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
              <div class="font-medium">Mis Noticias</div>
              <div class="text-sm opacity-90">Ver y editar mis artículos</div>
            </a>

            <!-- Crear Nueva Noticia -->
            <a
              href="/dashboard/news/create"
              class="bg-blue-600 hover:bg-blue-700 text-white p-4 rounded-lg text-center transition-colors shadow-sm hover:shadow-md"
            >
              <svg class="h-8 w-8 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 4v16m8-8H4"></path>
              </svg>
              <div class="font-medium">Nueva Noticia</div>
              <div class="text-sm opacity-90">Crear nuevo artículo</div>
            </a>

            <!-- Mis Convocatorias (solo para soceid = 1) -->
            {user.socesId === 1 && (
              <a
                href="/dashboard/conv"
                class="bg-purple-600 hover:bg-purple-700 text-white p-4 rounded-lg text-center transition-colors shadow-sm hover:shadow-md"
              >
                <svg class="h-8 w-8 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <div class="font-medium">Mis Convocatorias</div>
                <div class="text-sm opacity-90">Gestionar convocatorias</div>
              </a>
            )}

          </div>
        </div>

        <!-- Recent News Preview -->
        {userNews.length > 0 && (
          <div class="mt-8">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
              Mis Últimas Noticias
            </h3>
            <div class="bg-white shadow overflow-hidden sm:rounded-md">
              <ul class="divide-y divide-gray-200">
                {userNews.slice(0, 5).map((news) => (
                  <li>
                    <a href={`/dashboard/news/${news.id}/edit`} class="block hover:bg-gray-50">
                      <div class="px-4 py-4 sm:px-6">
                        <div class="flex items-center justify-between">
                          <div class="flex-1 min-w-0">
                            <h4 class="text-sm font-medium text-gray-900 truncate">
                              {news.titulo}
                            </h4>
                            <p class="text-sm text-gray-500 truncate">
                              {news.contenido}
                            </p>
                          </div>
                          <div class="ml-4 flex-shrink-0">
                            <span class="text-xs text-gray-400">
                              {new Date(news.fecha).toLocaleDateString()}
                            </span>
                          </div>
                        </div>
                      </div>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        )}

      </div>
    </main>
  </div>
</Layout>
