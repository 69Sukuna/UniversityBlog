---
import Layout from '../../layouts/Layout.astro';
import { requireRole } from '../../utils/auth';
import { getUserFromRequest } from '../../utils/session';
import { db, Usuarios, News, Soces, Convocatorias } from 'astro:db';


const user = getUserFromRequest(Astro.request);

if (!user) {
  return Astro.redirect('/login');
}

if (!requireRole(user, ['admin'])) {
  return Astro.redirect('/dashboard');
}

const usuarios = await db.select().from(Usuarios);
const noticias = await db.select().from(News);
const convocatorias = await db.select().from(Convocatorias)
const soces = await db.select().from(Soces);
const totalUsuarios = usuarios.length;
const totalNoticias = noticias.length;
const totalSoces = soces.length;
const totalConvocatorias = convocatorias.length;

// Enfoque alternativo: primero obtener todas las noticias y luego contar
const todasLasNoticias = await db.select().from(News);

// Contar noticias por sociedad manualmente
const socesConConteo = soces.map(soc => ({
  id: soc.id,
  nombre: soc.nombre,
  noticias_count: todasLasNoticias.filter(noticia => noticia.socesId === soc.id).length
}));
