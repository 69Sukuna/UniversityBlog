            <>
              <!-- Vista de Lista -->
              <ul class="divide-y divide-gray-200" id="lista-noticias">
                {noticias.map((noticia) => (
                  <li class="noticia-item px-4 py-6 hover:bg-gray-50 transition-colors duration-150" 
                      data-autor={noticia.userId}
                      data-sociedad={socesMap.get(noticia.socesId) ?? 'sin-asignar'}
                      data-fecha={noticia.fecha.toISOString()}>
                    <div class="flex items-start justify-between">
                      <div class="flex items-start space-x-4 flex-1">
                        <!-- Avatar de la noticia -->
                        <div class="flex-shrink-0">
                          <div class={`h-12 w-12 rounded-lg ${getAvatarColor(noticia.titulo)} flex items-center justify-center text-white font-semibold text-sm shadow-md`}>
                            {getInitials(noticia.titulo)}
                          </div>
                        </div>
                        
                        <!-- Información de la noticia -->
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center space-x-3 mb-2">
                            <h3 class="text-lg font-semibold text-gray-900 truncate">
                              {noticia.titulo}
                            </h3>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                              📰 Noticia
                            </span>
                          </div>
                          
                          <p class="text-sm text-gray-600 mb-3 line-clamp-2">
                            {truncateText(noticia.contenido)}
                          </p>
                          
                          <div class="grid grid-cols-1 md:grid-cols-3 gap-2 text-sm text-gray-500">
                            <div class="flex items-center">
