  <!-- Script para funcionalidad interactiva -->
  <script type="module" is:inline>
    const busqueda = document.getElementById('busqueda');
    const filtroAutor = document.getElementById('filtro-autor');
    const filtroSociedad = document.getElementById('filtro-sociedad');
    const filtroFecha = document.getElementById('filtro-fecha');
    const listaNoticias = document.getElementById('lista-noticias');
    const tarjetasNoticias = document.getElementById('tarjetas-noticias');
    const vistaLista = document.getElementById('vista-lista');
    const vistaTarjetas = document.getElementById('vista-tarjetas');
    const noticiasMostradas = document.getElementById('noticias-mostradas');

    let vistaActual = 'lista';

    // Función para comprobar si una fecha coincide con el filtro
    function coincideFecha(fechaNoticia, filtro) {
      const ahora = new Date();
      const fecha = new Date(fechaNoticia);
      
      switch(filtro) {
        case 'hoy':
          return fecha.toDateString() === ahora.toDateString();
        case 'semana':
          const inicioSemana = new Date(ahora);
          inicioSemana.setDate(ahora.getDate() - ahora.getDay());
          return fecha >= inicioSemana;
        case 'mes':
          return fecha.getMonth() === ahora.getMonth() && 
                 fecha.getFullYear() === ahora.getFullYear();
        case 'año':
          return fecha.getFullYear() === ahora.getFullYear();
        default:
          return true;
      }
    }

    // Función para aplicar todos los filtros
    function aplicarFiltros() {
      const textoBusqueda = busqueda.value.toLowerCase();
      const autorSeleccionado = filtroAutor.value;
      const sociedadSeleccionada = filtroSociedad.value;
      const fechaSeleccionada = filtroFecha.value;

      const contenedorActual = vistaActual === 'lista' ? listaNoticias : tarjetasNoticias;
      const items = contenedorActual.querySelectorAll(vistaActual === 'lista' ? '.noticia-item' : '.noticia-card');
      
      let contadorVisible = 0;

      items.forEach(item => {
        const textoCompleto = item.textContent.toLowerCase();
        const autor = item.dataset.autor;
        const sociedad = item.dataset.sociedad;
        const fecha = item.dataset.fecha;

        const coincideBusqueda = textoCompleto.includes(textoBusqueda);
        const coincidenAutor = !autorSeleccionado || autor === autorSeleccionado;
        const coincideSociedad = !sociedadSeleccionada || sociedad === sociedadSeleccionada;
        const coincideFechaItem = !fechaSeleccionada || coincideFecha(fecha, fechaSeleccionada);

        const visible = coincideBusqueda && coincidenAutor && coincideSociedad && coincideFechaItem;
        
        item.style.display = visible ? '' : 'none';
        if (visible) contadorVisible++;
      });

      noticiasMostradas.textContent = contadorVisible;
    }

    // Función para cambiar vista
    function cambiarVista(nuevaVista) {
      if (nuevaVista === vistaActual) return;

      vistaActual = nuevaVista;

      if (nuevaVista === 'lista') {
        listaNoticias.classList.remove('hidden');
        tarjetasNoticias.classList.add('hidden');
        vistaLista.classList.add('bg-blue-100', 'text-blue-600');
        vistaLista.classList.remove('text-gray-400', 'hover:bg-gray-100');
        vistaTarjetas.classList.remove('bg-blue-100', 'text-blue-600');
        vistaTarjetas.classList.add('text-gray-400', 'hover:bg-gray-100');
      } else {
        listaNoticias.classList.add('hidden');
        tarjetasNoticias.classList.remove('hidden');
        tarjetasNoticias.classList.add('grid');
        vistaTarjetas.classList.add('bg-blue-100', 'text-blue-600');
        vistaTarjetas.classList.remove('text-gray-400', 'hover:bg-gray-100');
        vistaLista.classList.remove('bg-blue-100', 'text-blue-600');
        vistaLista.classList.add('text-gray-400', 'hover:bg-gray-100');
      }

      aplicarFiltros();
    }

    // Event listeners
    busqueda?.addEventListener('input', aplicarFiltros);
    filtroAutor?.addEventListener('change', aplicarFiltros);
    filtroSociedad?.addEventListener('change', aplicarFiltros);
    filtroFecha?.addEventListener('change', aplicarFiltros);
    
    vistaLista?.addEventListener('click', () => cambiarVista('lista'));
    vistaTarjetas?.addEventListener('click', () => cambiarVista('tarjetas'));

    // Mejorar confirmación de eliminación
    document.querySelectorAll('form[action="/api/admin/news/delete"]').forEach(form => {
      form.addEventListener('submit', function(e) {
        const newsTitle = this.closest('li, .noticia-card').querySelector('h3').textContent.trim();
        if (!confirm(`¿Estás seguro de eliminar la noticia "${newsTitle}"?\n\nEsta acción no se puede deshacer y eliminará todos los datos asociados.`)) {
          e.preventDefault();
        }
      });
    });

    // Keyboard shortcuts
    document.addEventListener('keydown', function(e) {
      // Ctrl/Cmd + K para enfocar búsqueda
      if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
        e.preventDefault();
        busqueda?.focus();
      }
      
      // Ctrl/Cmd + 1/2 para cambiar vista
      if ((e.ctrlKey || e.metaKey) && e.key === '1') {
        e.preventDefault();
        cambiarVista('lista');
      }
      if ((e.ctrlKey || e.metaKey) && e.key === '2') {
        e.preventDefault();
        cambiarVista('tarjetas');
      }
    });

    // Mostrar atajos de teclado al usuario
    console.log('Atajos de teclado disponibles:');
    console.log('Ctrl/Cmd + K: Enfocar búsqueda');
    console.log('Ctrl/Cmd + 1: Vista de lista');
    console.log('Ctrl/Cmd + 2: Vista de tarjetas');

    // Funcionalidad adicional: Ordenar noticias
    function ordenarNoticias(criterio) {
      const contenedorActual = vistaActual === 'lista' ? listaNoticias : tarjetasNoticias;
      const items = Array.from(contenedorActual.querySelectorAll(vistaActual === 'lista' ? '.noticia-item' : '.noticia-card'));
      
      items.sort((a, b) => {
        switch(criterio) {
          case 'fecha-desc':
            return new Date(b.dataset.fecha) - new Date(a.dataset.fecha);
          case 'fecha-asc':
            return new Date(a.dataset.fecha) - new Date(b.dataset.fecha);
          case 'titulo':
            return a.querySelector('h3').textContent.localeCompare(b.querySelector('h3').textContent);
          default:
            return 0;
        }
      });

      // Reordenar elementos en el DOM
      items.forEach(item => contenedorActual.appendChild(item));
    }

    // Añadir botón de ordenamiento (opcional)
    const headerControls = document.querySelector('.px-4.py-5.sm\\:px-6.border-b .flex.justify-between');
    if (headerControls) {
      const sortButton = document.createElement('select');
      sortButton.className = 'text-sm border border-gray-300 rounded-md px-2 py-1 mr-4';
      sortButton.innerHTML = `
        <option value="">Ordenar por...</option>
        <option value="fecha-desc">Fecha (más reciente)</option>
        <option value="fecha-asc">Fecha (más antigua)</option>
        <option value="titulo">Título (A-Z)</option>
      `;
      sortButton.addEventListener('change', (e) => {
        if (e.target.value) {
          ordenarNoticias(e.target.value);
        }
      });
      
      const viewToggle = headerControls.querySelector('.flex.items-center.space-x-2');
      if (viewToggle) {
        viewToggle.parentNode.insertBefore(sortButton, viewToggle);
      }
    }
  </script>

