---
import Layout from '../../../layouts/Layout.astro';
import Button from '../../../components/ui/Button.astro';
import Alert from '../../../components/ui/Alert.astro';
import { getUserFromRequest } from '../../../utils/session';
import { requireRole } from '../../../utils/auth';
import { db, Usuarios, Convocatorias, Soces, eq } from 'astro:db';

const user = getUserFromRequest(Astro.request);

// Verificar que el usuario esté autenticado y pertenezca a la sociedad ID 1
if (!user || user.socesId !== 1) {
  return Astro.redirect('/login');
}

// Solo obtener datos relevantes para la sociedad ID 1
const convocatoriasSoces1 = await db.select().from(Convocatorias).where(eq(Convocatorias.socesId, 1));
const usuariosSoces1 = await db.select().from(Usuarios).where(eq(Usuarios.socesId, 1));
const sociedadInfo = await db.select().from(Soces).where(eq(Soces.id, 1));

const totalConvocatorias = convocatoriasSoces1.length;
const nombreSociedad = sociedadInfo[0]?.nombre || 'Sociedad';

// Crear map de usuarios para mejor rendimiento
const usuariosMap = new Map(usuariosSoces1.map(u => [u.id, u.nombre]));

// Obtener mensajes de la URL
const urlParams = new URLSearchParams(new URL(Astro.request.url).search);
const message = urlParams.get('message');
const error = urlParams.get('error');

// Función para formatear fecha
const formatDate = (fecha: Date) => {
  return new Intl.DateTimeFormat('es-BO', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(fecha);
};

// Función para truncar texto
const truncateText = (text: string, maxLength: number = 150) => {
  if (!text || text.length <= maxLength) return text;
  return text.substring(0, maxLength) + '...';
};

// Función para obtener color del avatar basado en el título
const getAvatarColor = (titulo: string) => {
  const colors = [
    'bg-blue-500', 'bg-green-500', 'bg-purple-500', 'bg-indigo-500', 'bg-teal-500'
  ];
  if (!titulo || typeof titulo !== 'string') return colors[0];
  const index = titulo.charCodeAt(0) % colors.length;
  return colors[index];
};

// Función para obtener iniciales del título
const getInitials = (titulo: string) => {
  if (!titulo || typeof titulo !== 'string') return '?';
  return titulo.trim().split(' ').slice(0, 2).map(word => word.charAt(0)).join('').toUpperCase() || '?';
};
---

<Layout title={`Convocatorias - ${nombreSociedad}`}>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-6">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Convocatorias de {nombreSociedad}</h1>
            <p class="mt-2 text-sm text-gray-600">Gestiona las convocatorias de tu sociedad</p>
          </div>
          <div class="flex space-x-3">
            <Button href="/dashboard" variant="secondary">← Volver</Button>
            {/* Solo mostrar botón de crear si el usuario tiene permisos */}
            {(user.role === 'admin' || user.role === 'editor') && (
              <Button href="/admin/conv/create" variant="primary">+ Nueva Convocatoria</Button>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-6 sm:px-0">

        {message && (
          <Alert type="success" class="mb-6">
            {message === 'created' && 'Convocatoria creada exitosamente'}
            {message === 'updated' && 'Convocatoria actualizada exitosamente'}
            {message === 'deleted' && 'Convocatoria eliminada exitosamente'}
          </Alert>
        )}

        {error && (
          <Alert type="error" class="mb-6">
            {error === 'delete_failed' && 'Error al eliminar convocatoria'}
            {error === 'not_found' && 'Convocatoria no encontrada'}
            {error === 'unauthorized' && 'No tienes permisos para realizar esta acción'}
          </Alert>
        )}

        <!-- Stats Cards (simplificadas) -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <!-- Total Convocatorias -->
          <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-blue-500">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Total Convocatorias</dt>
                    <dd class="text-2xl font-bold text-gray-900">{totalConvocatorias}</dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>

          <!-- Convocatorias Este Mes -->
          <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-green-500">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Este Mes</dt>
                    <dd class="text-2xl font-bold text-gray-900">
                      {convocatoriasSoces1.filter(c => {
                        const now = new Date();
                        const convocatoriaMes = new Date(c.fecha);
                        return convocatoriaMes.getMonth() === now.getMonth() && 
                               convocatoriaMes.getFullYear() === now.getFullYear();
                      }).length}
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>

          <!-- Autores Activos en la Sociedad -->
          <div class="bg-white overflow-hidden shadow rounded-lg border-l-4 border-purple-500">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Autores Activos</dt>
                    <dd class="text-2xl font-bold text-gray-900">
                      {new Set(convocatoriasSoces1.map(c => c.userId)).size}
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Controles de filtrado y búsqueda (simplificados) -->
        <div class="bg-white p-6 rounded-lg shadow mb-6">
          <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-4 lg:space-y-0 lg:space-x-4">
            <!-- Búsqueda -->
            <div class="flex-1 max-w-lg">
              <label for="busqueda" class="block text-sm font-medium text-gray-700 mb-2">Buscar convocatoria</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </div>
                <input
                  id="busqueda"
                  type="text"
                  placeholder="Buscar por título o contenido..."
                  class="pl-10 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                />
              </div>
            </div>

            <!-- Filtros simplificados -->
            <div class="flex space-x-4">
              <div>
                <label for="filtro-autor" class="block text-sm font-medium text-gray-700 mb-2">Filtrar por autor</label>
                <select id="filtro-autor" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                  <option value="">Todos los autores</option>
                  {Array.from(usuariosMap.entries()).map(([id, nombre]) => (
                    <option value={id}>{nombre}</option>
                  ))}
                </select>
              </div>

              <div>
                <label for="filtro-fecha" class="block text-sm font-medium text-gray-700 mb-2">Filtrar por fecha</label>
                <select id="filtro-fecha" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                  <option value="">Todas las fechas</option>
                  <option value="hoy">Hoy</option>
                  <option value="semana">Esta semana</option>
                  <option value="mes">Este mes</option>
                  <option value="año">Este año</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <!-- Vista de convocatorias -->
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
            <div>
              <h3 class="text-lg leading-6 font-medium text-gray-900">
                Convocatorias de {nombreSociedad}
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                <span id="convocatorias-mostradas">{totalConvocatorias}</span> de {totalConvocatorias} convocatorias
              </p>
            </div>
            
            <!-- Toggle de vista -->
            <div class="flex items-center space-x-2">
              <span class="text-sm text-gray-500">Vista:</span>
              <button id="vista-lista" class="p-2 rounded-md bg-blue-100 text-blue-600">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                </svg>
              </button>
              <button id="vista-tarjetas" class="p-2 rounded-md text-gray-400 hover:bg-gray-100">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                </svg>
              </button>
            </div>
          </div>

          {convocatoriasSoces1.length === 0 ? (
            <div class="text-center py-12">
              <svg
                class="mx-auto h-12 w-12 text-gray-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"
                />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No hay convocatorias</h3>
              <p class="mt-1 text-sm text-gray-500">Tu sociedad aún no tiene convocatorias publicadas.</p>
              {(user.role === 'admin' || user.role === 'editor') && (
                <div class="mt-6">
                  <Button href="/admin/conv/create" variant="primary">+ Crear Primera Convocatoria</Button>
                </div>
              )}
            </div>
          ) : (
            <>
              <!-- Vista de Lista -->
              <ul class="divide-y divide-gray-200" id="lista-convocatorias">
                {convocatoriasSoces1.map((convocatoria) => (
                  <li class="convocatoria-item px-4 py-6 hover:bg-gray-50 transition-colors duration-150" 
                      data-autor={convocatoria.userId}
                      data-fecha={convocatoria.fecha.toISOString()}>
                    <div class="flex items-start justify-between">
                      <div class="flex items-start space-x-4 flex-1">
                        <!-- Avatar de la convocatoria -->
                        <div class="flex-shrink-0">
                          <div class={`h-12 w-12 rounded-lg ${getAvatarColor(convocatoria.titulo)} flex items-center justify-center text-white font-semibold text-sm shadow-md`}>
                            {getInitials(convocatoria.titulo)}
                          </div>
                        </div>
                        
                        <!-- Información de la convocatoria -->
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center space-x-3 mb-2">
                            <h3 class="text-lg font-semibold text-gray-900 truncate">
                              {convocatoria.titulo}
                            </h3>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                              📢 Convocatoria
                            </span>
                          </div>
                          
                          <p class="text-sm text-gray-600 mb-3 line-clamp-2">
                            {truncateText(convocatoria.contenido)}
                          </p>
                          
                          <div class="grid grid-cols-1 md:grid-cols-2 gap-2 text-sm text-gray-500">
                            <div class="flex items-center">
                              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                              </svg>
                              <span class="truncate">{usuariosMap.get(convocatoria.userId) ?? 'Autor desconocido'}</span>
                            </div>
                            <div class="flex items-center">
                              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                              </svg>
                              <span class="truncate">{formatDate(convocatoria.fecha)}</span>
                            </div>
                          </div>

                          <!-- Enlaces -->
                          {(convocatoria.link || convocatoria.link2) && (
                            <div class="flex items-center space-x-4 mt-3">
                              {convocatoria.link && (
                                <a href={convocatoria.link} target="_blank" rel="noopener noreferrer" 
                                   class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800">
                                  <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                  </svg>
                                  Enlace principal
                                </a>
                              )}
                              {convocatoria.link2 && (
                                <a href={convocatoria.link2} target="_blank" rel="noopener noreferrer" 
                                   class="inline-flex items-center text-sm text-green-600 hover:text-green-800">
                                  <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                  </svg>
                                  Enlace secundario
                                </a>
                              )}
                            </div>
                          )}
                        </div>
                      </div>
                      
                      <!-- Acciones (solo si tiene permisos) -->
                      {(user.role === 'admin' || user.role === 'editor' || convocatoria.userId === user.id) && (
                        <div class="flex items-center space-x-3 ml-4">
                          <Button href={`conv/${convocatoria.id}/edit`} variant="outline" size="sm">
                            <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Editar
                          </Button>
                          {(user.role === 'admin' || convocatoria.userId === user.id) && (
                            <form action="/api/conv/delete" method="POST" class="inline">
                              <input type="hidden" name="convId" value={convocatoria.id} />
                              <button
                                type="submit"
                                onclick="return confirm('¿Estás seguro de eliminar esta convocatoria? Esta acción no se puede deshacer.')"
                                class="inline-flex items-center px-3 py-2 border border-red-300 text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-150"
                              >
                                <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                                Eliminar
                              </button>
                            </form>
                          )}
                        </div>
                      )}
                    </div>
                  </li>
                ))}
              </ul>

              <!-- Vista de Tarjetas (inicialmente oculta) -->
              <div class="hidden grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6" id="tarjetas-convocatorias">
                {convocatoriasSoces1.map((convocatoria) => (
                  <div class="convocatoria-card bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow duration-150"
                       data-autor={convocatoria.userId}
                       data-fecha={convocatoria.fecha.toISOString()}>
                    <!-- Header de la tarjeta -->
                    <div class="flex items-start space-x-4 mb-4">
                      <div class={`h-16 w-16 rounded-lg ${getAvatarColor(convocatoria.titulo)} flex items-center justify-center text-white font-bold text-lg shadow-md flex-shrink-0`}>
                        {getInitials(convocatoria.titulo)}
                      </div>
                      <div class="flex-1 min-w-0">
                        <h3 class="text-lg font-semibold text-gray-900 line-clamp-2 mb-2">{convocatoria.titulo}</h3>
                        <div class="flex items-center space-x-2">
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            📢 Convocatoria
                          </span>
                        </div>
                      </div>
                    </div>

                    <!-- Contenido -->
                    <div class="mb-4">
                      <p class="text-sm text-gray-600 line-clamp-3">
                        {truncateText(convocatoria.contenido, 120)}
                      </p>
                    </div>

                    <!-- Información adicional -->
                    <div class="space-y-3 mb-6">
                      <div class="flex items-center text-sm text-gray-600">
                        <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        <span class="truncate">{usuariosMap.get(convocatoria.userId) ?? 'Autor desconocido'}</span>
                      </div>
                      <div class="flex items-center text-sm text-gray-600">
                        <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span>{formatDate(convocatoria.fecha)}</span>
                      </div>
                    </div>

                    <!-- Enlaces en tarjeta -->
                    {(convocatoria.link || convocatoria.link2) && (
                      <div class="flex flex-col space-y-2 mb-4">
                        {convocatoria.link && (
                          <a href={convocatoria.link} target="_blank" rel="noopener noreferrer" 
                             class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800 truncate">
                            <svg class="w-3 h-3 mr-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                            Enlace principal
                          </a>
                        )}
                        {convocatoria.link2 && (
                          <a href={convocatoria.link2} target="_blank" rel="noopener noreferrer" 
                             class="inline-flex items-center text-sm text-green-600 hover:text-green-800 truncate">
                            <svg class="w-3 h-3 mr-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                            Enlace secundario
                          </a>
                        )}
                      </div>
                    )}

                    <!-- Acciones en tarjeta -->
                    {(user.role === 'admin' || user.role === 'editor' || convocatoria.userId === user.id) && (
                      <div class="flex space-x-2">

                        <Button href={`/admin/conv/${convocatoria.id}/edit`} variant="outline" size="sm" class="flex-1">
                          Editar
                        </Button>
                        {(user.role === 'admin' || convocatoria.userId === user.id) && (
