---
export interface Props {
  action?: string;
  method?: 'GET' | 'POST';
  class?: string;
  enctype?: string;
}

const { action, method = 'POST', class: className = '', enctype } = Astro.props;
---

<form action={action} method={method} enctype={enctype} class={`space-y-6 ${className}`}>
  <slot />
</form>
